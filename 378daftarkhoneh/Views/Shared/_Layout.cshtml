    <script>
        // Mobile dropdown handling
        document.addEventListener('DOMContentLoaded', function() {
            // For mobile devices, convert hover to click
            const isMobile = window.innerWidth <= 991;
            
            if (isMobile) {
                const dropdownToggles = document.querySelectorAll('.navbar-nav .dropdown > .nav-link');
                dropdownToggles.forEach(toggle => {
                    toggle.addEventListener('click', function(e) {
                        e.preventDefault();
                        const dropdown = this.nextElementSibling;
                        if (dropdown) {
                            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
                        }
                    });
                });
            }
            
            // Keep auth dropdown click-based always
            const authDropdown = document.querySelector('.navbar-auth .dropdown-toggle');
            if (authDropdown) {
                authDropdown.setAttribute('data-bs-toggle', 'dropdown');
            }
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 991) {
                // Reset mobile dropdown styles
                const dropdownMenus = document.querySelectorAll('.navbar-nav .dropdown-menu');
                dropdownMenus.forEach(menu => {
                    menu.style.display = '';
                });
            }
        });
    </script>
    
