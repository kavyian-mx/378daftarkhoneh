        /* Footer Styles */
        .footer {
            background: linear-gradient(135deg, var(--dark-color), #1a202c);
            color: white;
            padding: 60px 0 30px;
            margin-top: 0;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--primary-color));
        }

        .footer h5 {
            color: var(--secondary-color);
            margin-bottom: 25px;
            font-weight: 700;
            position: relative;
        }

        .footer h5::after {
            content: '';
            position: absolute;
            bottom: -8px;
            right: 0;
            width: 40px;
            height: 3px;
            background: var(--secondary-color);
            border-radius: 2px;
        }

