            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.3rem;
            flex-shrink: 0;
        }

        .navbar-nav .nav-link {
            color: var(--dark-color) !important;
            font-weight: 500;
            padding: 12px 10px !important;
            transition: all 0.3s ease;
            position: relative;
            border-radius: 8px;
            margin: 0 2px;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .navbar-nav .nav-link:hover {
            color: var(--secondary-color) !important;
            background: rgba(52, 152, 219, 0.1);
            transform: translateY(-2px);
        }

        .navbar-nav .nav-link i {
            font-size: 0.8rem;
            margin-left: 5px;
        }

        .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            bottom: 8px;
            right: 50%;
            width: 0;
            height: 2px;
            background-color: var(--secondary-color);
            transition: all 0.3s ease;
            transform: translateX(50%);
        }

        .navbar-nav .nav-link:hover::after {
            width: 70%;
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            border-radius: 15px;
            padding: 20px 10px;
            margin-top: 15px;
            background: white;
            backdrop-filter: blur(20px);
        }

        .dropdown-item {
            border-radius: 10px;
            padding: 15px 25px;
            transition: all 0.3s ease;
            margin: 3px 0;
            color: var(--dark-color);
            display: flex;
            align-items: center;
        }

        .dropdown-item:hover {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            transform: translateX(8px);
        }

        .dropdown-item i {
            font-size: 1rem;
            width: 25px;
        }

        .dropdown-header {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 12px 25px;
            margin-bottom: 8px;
            background: rgba(52, 152, 219, 0.1);
            border-radius: 8px;
        }

        .dropdown-divider {
            margin: 15px 20px;
            border-color: rgba(0,0,0,0.1);
        }

        /* Logo Styles */
        .logo-container {
            display: flex;
            align-items: center;
            text-decoration: none !important;
            transition: all 0.3s ease;
        }

        .logo-container:hover {
            transform: scale(1.05);
        }

        .logo-icon {
            width: 65px;
            height: 65px;
            background: white;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            position: relative;
            overflow: hidden;
            border: none;
            padding: 5px;
        }

        .logo-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            position: relative;
            z-index: 2;
        }

        .logo-icon::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(52,152,219,0.1), transparent);
            transform: rotate(45deg);
            animation: logoShine 4s ease-in-out infinite;
        }

        @@keyframes logoShine {
            0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .logo-text {
            display: flex;
            flex-direction: column;
        }

        .logo-title {
            margin: 0;
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-color) !important;
            line-height: 1.2;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logo-subtitle {
            font-size: 0.8rem;
            color: #666;
            margin: 0;
            font-weight: 500;
            letter-spacing: 0.3px;
        }

        .logo-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            font-size: 0.8rem;
            padding: 4px 8px;
            border-radius: 10px;
            font-weight: 700;
            box-shadow: 0 3px 10px rgba(240, 147, 251, 0.5);
            animation: badgePulse 2s ease-in-out infinite;
        }

        @@keyframes badgePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        /* Auth Button Styles */
        .navbar-auth {
            margin-right: 20px;
        }

        .auth-btn {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            border: none;
            border-radius: 30px;
            padding: 12px 25px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
