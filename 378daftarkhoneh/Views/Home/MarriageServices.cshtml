@{
    ViewData["Title"] = "خدمات ازدواج";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-hero">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="fas fa-heart text-danger me-3"></i>
                        خدمات ازدواج
                    </h1>
                    <p class="hero-subtitle">
                        تنظیم کلیه اسناد مربوط به ازدواج، طلاق، شروط ضمن عقد و مشاوره تخصصی خانواده
                    </p>
                    <div class="hero-features">
                        <div class="feature-badge">
                            <i class="fas fa-users me-2"></i>
                            مشاوره خانواده
                        </div>
                        <div class="feature-badge">
                            <i class="fas fa-balance-scale me-2"></i>
                            طبق شرع و قانون
                        </div>
                        <div class="feature-badge">
                            <i class="fas fa-handshake me-2"></i>
                            صلح و سازش
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="marriage-visual">
                        <div class="visual-card marriage">
                            <i class="fas fa-ring"></i>
                            <span>عقد ازدواج</span>
                        </div>
                        <div class="visual-card conditions">
                            <i class="fas fa-list-alt"></i>
                            <span>شروط ضمن عقد</span>
                        </div>
                        <div class="visual-card consultation">
                            <i class="fas fa-comments"></i>
                            <span>مشاوره خانواده</span>
                        </div>
                        <div class="visual-card divorce">
                            <i class="fas fa-gavel"></i>
                            <span>طلاق توافقی</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="services-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>خدمات کامل ازدواج</h2>
            <p>از عقد تا طلاق، همه چیز در یک مکان</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="service-card premium">
                    <div class="service-badge">محبوب‌ترین</div>
                    <div class="service-icon">
                        <i class="fas fa-ring"></i>
                    </div>
                    <h3>عقد ازدواج</h3>
                    <p>تنظیم سند عقد ازدواج مطابق قوانین شرعی و قانونی</p>
                    <div class="service-details">
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>تنظیم سند عقد</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>تعیین مهریه</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>مشاوره شرعی</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>راهنمایی کامل</span>
                        </div>
                    </div>
                    <div class="service-price">
                        <span class="price">۱۵۰,۰۰۰ تومان</span>
                        <span class="note">شامل مشاوره</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-list-alt"></i>
                    </div>
                    <h3>شروط ضمن عقد</h3>
                    <p>تنظیم شروط مناسب برای حفاظت از حقوق زوجین</p>
                    <div class="service-details">
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>شرط تحصیل و کار</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>شرط مسکن</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>شرط عدم تعدد زوجات</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>سایر شروط قانونی</span>
                        </div>
                    </div>
                    <div class="service-price">
                        <span class="price">۱۰۰,۰۰۰ تومان</span>
                        <span class="note">هر شرط</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>طلاق توافقی</h3>
                    <p>تنظیم طلاق توافقی و تقسیم اموال به صورت دوستانه</p>
                    <div class="service-details">
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>طلاق توافقی</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>تقسیم اموال</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>حضانت فرزندان</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>نفقه</span>
                        </div>
                    </div>
                    <div class="service-price">
                        <span class="price">۳۰۰,۰۰۰ تومان</span>
                        <span class="note">کامل</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3>مشاوره خانواده</h3>
                    <p>مشاوره تخصصی برای حل مشکلات خانوادگی</p>
                    <div class="service-details">
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>مشاوره قبل از ازدواج</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>حل اختلافات زناشویی</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>میانجیگری</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-check me-2"></i>
                            <span>راهنمایی حقوقی</span>
                        </div>
                    </div>
                    <div class="service-price">
                        <span class="price">رایگان</span>
                        <span class="note">جلسه اول</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="process-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>مراحل انجام کار</h2>
            <p>روند ساده و شفاف برای تنظیم اسناد ازدواج</p>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="process-steps">
                    <div class="step-item">
                        <div class="step-number">۱</div>
                        <div class="step-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4>تعیین وقت</h4>
                        <p>هماهنگی زمان مناسب برای مراجعه</p>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">۲</div>
                        <div class="step-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h4>ارائه مدارک</h4>
                        <p>تحویل مدارک هویتی و مدارک مورد نیاز</p>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">۳</div>
                        <div class="step-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <h4>مشاوره</h4>
                        <p>دریافت مشاوره کامل درباره حقوق و تکالیف</p>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">۴</div>
                        <div class="step-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <h4>تنظیم سند</h4>
                        <p>تهیه و تنظیم سند مطابق خواسته شما</p>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">۵</div>
                        <div class="step-icon">
                            <i class="fas fa-stamp"></i>
                        </div>
                        <h4>تحویل نهایی</h4>
                        <p>تحویل سند رسمی و مهر شده</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="requirements-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="requirements-card">
                    <h3>
                        <i class="fas fa-ring me-3"></i>
                        مدارک مورد نیاز عقد ازدواج
                    </h3>
                    <ul class="requirements-list">
                        <li>اصل شناسنامه زوجین</li>
                        <li>کارت ملی زوجین</li>
                        <li>گواهی عدم ازدواج</li>
                        <li>تصویر کارت ملی ولی (در صورت نیاز)</li>
                        <li>مدرک تحصیلات</li>
                        <li>تصاویر ۳×۴</li>
                        <li>فیش حقوقی یا درآمد</li>
                    </ul>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="requirements-card">
                    <h3>
                        <i class="fas fa-gavel me-3"></i>
                        مدارک مورد نیاز طلاق
                    </h3>
                    <ul class="requirements-list">
                        <li>اصل سند ازدواج</li>
                        <li>شناسنامه زوجین</li>
                        <li>کارت ملی زوجین</li>
                        <li>شناسنامه فرزندان</li>
                        <li>مدارک مالی و اموال</li>
                        <li>سند املاک (در صورت وجود)</li>
                        <li>توافق‌نامه تقسیم اموال</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="faq-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>سوالات متداول</h2>
            <p>پاسخ سوالات رایج درباره خدمات ازدواج</p>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                مدت زمان تنظیم عقد ازدواج چقدر است؟
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                در صورت آماده بودن تمام مدارک، عقد ازدواج در همان روز تنظیم و تحویل داده می‌شود.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                آیا می‌توان شروط خاصی در عقد ازدواج قرار داد؟
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                بله، شما می‌توانید شروط ضمن عقد مختلفی مانند عدم تعدد زوجات، حق تحصیل، حق کار و... را در عقد درج کنید.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                آیا طلاق توافقی هزینه کمتری دارد؟
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                بله، طلاق توافقی علاوه بر هزینه کمتر، زمان کمتری نیز می‌برد و برای هر دو طرف مناسب‌تر است.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                آیا مشاوره خانواده رایگان است؟
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                اولین جلسه مشاوره کاملاً رایگان است. جلسات بعدی در صورت نیاز با هزینه‌ای مناسب ارائه می‌شود.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3>آماده شروع زندگی جدیدتان هستید؟</h3>
                <p>با ما تماس بگیرید و از مشاوره رایگان استفاده کنید</p>
            </div>
            <div class="col-lg-4 text-end">
                <a href="/Home/Contact" class="btn btn-light btn-lg">
                    <i class="fas fa-phone me-2"></i>
                    تماس با ما
                </a>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .page-hero {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            color: white;
            padding: 100px 0;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-features {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .feature-badge {
            background: rgba(255,255,255,0.2);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.9rem;
            backdrop-filter: blur(10px);
        }

        .marriage-visual {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            padding: 2rem;
        }

        .visual-card {
            background: rgba(255,255,255,0.15);
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }

        .visual-card i {
            font-size: 2rem;
            margin-bottom: 1rem;
            display: block;
        }

        .visual-card.marriage { color: #ffd700; }
        .visual-card.conditions { color: #87ceeb; }
        .visual-card.consultation { color: #98fb98; }
        .visual-card.divorce { color: #dda0dd; }

        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .service-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            text-align: center;
            height: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        }

        .service-card.premium {
            border: 3px solid var(--danger-color);
            background: linear-gradient(135deg, #fff 0%, #ffe8e8 100%);
        }

        .service-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--danger-color);
            color: white;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .service-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-secondary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

        .service-icon i {
            font-size: 2rem;
            color: white;
        }

        .service-card h3 {
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .service-details {
            margin: 2rem 0;
            text-align: right;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.8rem;
            font-size: 0.95rem;
        }

        .detail-item i {
            color: var(--success-color);
            font-size: 0.8rem;
        }

        .service-price {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 15px;
            margin-top: 2rem;
        }

        .service-price .price {
            display: block;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .service-price .note {
            color: #666;
            font-size: 0.9rem;
        }

        .process-steps {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            position: relative;
        }

        .process-steps::before {
            content: '';
            position: absolute;
            top: 50px;
            left: 50px;
            right: 50px;
            height: 3px;
            background: var(--secondary-color);
            z-index: 1;
        }

        .step-item {
            background: white;
            padding: 2rem 1rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            position: relative;
            z-index: 2;
            flex: 1;
            margin: 0 0.5rem;
        }

        .step-number {
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 40px;
            background: var(--danger-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        }

        .step-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 1rem auto;
        }

        .step-icon i {
            font-size: 1.5rem;
            color: white;
        }

        .step-item h4 {
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .requirements-card {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            height: 100%;
        }

        .requirements-card h3 {
            color: var(--primary-color);
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f0f0f0;
        }

        .requirements-list {
            list-style: none;
            padding: 0;
        }

        .requirements-list li {
            padding: 0.8rem 0;
            border-bottom: 1px solid #f0f0f0;
            position: relative;
            padding-right: 1.5rem;
        }

        .requirements-list li:last-child {
            border-bottom: none;
        }

        .requirements-list li::before {
            content: '\f0da';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 0;
            color: var(--secondary-color);
        }

        .accordion-item {
            background: white;
            border: none;
            border-radius: 10px !important;
            margin-bottom: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .accordion-button {
            background: none;
            border: none;
            font-weight: 600;
            color: var(--primary-color);
            padding: 1.5rem;
        }

        .accordion-button:not(.collapsed) {
            background: var(--gradient-primary);
            color: white;
        }

        .accordion-body {
            padding: 1.5rem;
            border-top: 1px solid #f0f0f0;
        }

        .cta-section {
            background: var(--gradient-secondary);
            color: white;
        }

        .cta-section h3 {
            margin-bottom: 0.5rem;
        }

        @@media (max-width: 768px) {
            .hero-features {
                justify-content: center;
            }

            .marriage-visual {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .process-steps {
                flex-direction: column;
            }

            .process-steps::before {
                display: none;
            }

            .step-item {
                margin: 1rem 0;
            }
        }
    </style>
} 