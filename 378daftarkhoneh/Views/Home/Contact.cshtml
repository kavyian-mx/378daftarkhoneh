@{
    ViewData["Title"] = "تماس با ما";
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>تماس با دفترخانه ۳۷۸</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
                        <li class="breadcrumb-item active">تماس با ما</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="contact-form-box">
                    <h3 class="mb-4">فرم تماس</h3>
                    <form id="contactForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">نام و نام خانوادگی</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">شماره تماس</label>
                                <input type="tel" class="form-control" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">ایمیل</label>
                                <input type="email" class="form-control">
                            </div>
                            <div class="col-12">
                                <label class="form-label">موضوع</label>
                                <select class="form-select">
                                    <option>انتخاب کنید...</option>
                                    <option>مشاوره حقوقی</option>
                                    <option>استعلام هزینه</option>
                                    <option>رزرو وقت</option>
                                    <option>سایر موارد</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">پیام شما</label>
                                <textarea class="form-control" rows="5" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    ارسال پیام
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-5">
                <div class="contact-info">
                    <h3 class="mb-4">اطلاعات تماس</h3>
                    
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h5>آدرس دفترخانه</h5>
                            <p>تهران، خیابان ولیعصر، نرسیده به میدان تجریش، جنب بانک توسعه صادرات، ساختمان ولیعصر، پلاک 3094، طبقه 1</p>
                            <p class="mb-0">سردفتر: زهره محمدرضازاده</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h5>تلفن تماس</h5>
                            <p class="mb-1">۰۲۱-۲۲۷۰۹۱۳۸</p>
                            <p class="mb-0">۰۹۱۲۱۸۵۲۴۵۸</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h5>ایمیل</h5>
                            <p class="mb-0">notary378@gmail.com</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h5>ساعات کاری</h5>
                            <p class="mb-1">شنبه تا چهارشنبه: ۸:۰۰ تا ۱۵:۳۰</p>
                            <p class="mb-0">پنجشنبه: ۸:۰۰ تا ۱۳:۰۰</p>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="social-box mt-4">
                        <h5 class="mb-3">ما را در شبکه‌های اجتماعی دنبال کنید</h5>
                        <div class="social-links">
                            <a href="#" class="social-link telegram">
                                <i class="fab fa-telegram"></i>
                            </a>
                            <a href="#" class="social-link whatsapp">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                            <a href="#" class="social-link instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="map-container">
                    <h3 class="text-center mb-4">موقعیت دفترخانه روی نقشه</h3>
                    <div class="map-wrapper">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3238.8963!2d51.4105!3d35.7289!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzXCsDQzJzQ0LjAiTiA1McKwMjQnMzcuOCJF!5e0!3m2!1sen!2s!4v1234567890" 
                                width="100%" 
                                height="400" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 60px 0;
            margin-bottom: 50px;
        }

        .contact-form-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .contact-info {
            background: #f8f9fa;
            padding: 40px;
            border-radius: 10px;
            height: 100%;
        }

        .info-item {
            display: flex;
            align-items: start;
            margin-bottom: 30px;
        }

        .info-item i {
            font-size: 1.5rem;
            color: var(--secondary-color);
            margin-left: 20px;
            margin-top: 5px;
        }

        .info-item h5 {
            color: var(--dark-color);
            margin-bottom: 10px;
        }

        .info-item p {
            color: #666;
        }

        .social-links {
            display: flex;
            gap: 15px;
        }

        .social-link {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            transition: all 0.3s ease;
        }

        .social-link:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .social-link.telegram {
            background: #0088cc;
        }

        .social-link.whatsapp {
            background: #25d366;
        }

        .social-link.instagram {
            background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
        }

        .map-wrapper {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .form-control, .form-select {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.1);
        }
    </style>
}

@section Scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Here you would normally send the form data to the server
            alert('پیام شما با موفقیت ارسال شد. در اسرع وقت با شما تماس خواهیم گرفت.');
            
            // Reset form
            this.reset();
        });
    </script>
} 