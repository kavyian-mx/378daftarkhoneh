@{
    ViewData["Title"] = "اسناد حقوقی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-hero">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="fas fa-balance-scale text-primary me-3"></i>
                        اسناد حقوقی
                    </h1>
                    <p class="hero-subtitle">
                        تنظیم کلیه اسناد حقوقی، قراردادها، وکالتنامه‌ها و مشاوره تخصصی در امور حقوقی
                    </p>
                    <div class="hero-badges">
                        <span class="badge-item">
                            <i class="fas fa-shield-alt me-2"></i>
                            تضمین قانونی
                        </span>
                        <span class="badge-item">
                            <i class="fas fa-user-tie me-2"></i>
                            مشاوره متخصص
                        </span>
                        <span class="badge-item">
                            <i class="fas fa-clock me-2"></i>
                            سرعت بالا
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-visual">
                    <div class="legal-icons">
                        <div class="icon-item">
                            <i class="fas fa-gavel"></i>
                            <span>وکالتنامه</span>
                        </div>
                        <div class="icon-item">
                            <i class="fas fa-file-contract"></i>
                            <span>قراردادها</span>
                        </div>
                        <div class="icon-item">
                            <i class="fas fa-handshake"></i>
                            <span>توافقنامه</span>
                        </div>
                        <div class="icon-item">
                            <i class="fas fa-certificate"></i>
                            <span>گواهی نامه</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="services-grid py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>خدمات اسناد حقوقی</h2>
            <p>طیف کاملی از خدمات تنظیم اسناد حقوقی با کیفیت بالا</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-6 col-md-6">
                <div class="service-card featured">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-gavel"></i>
                        </div>
                        <h3>وکالتنامه‌ها</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم انواع وکالتنامه‌های عام، خاص، بانکی، قضایی و اداری</p>
                        <ul class="service-list">
                            <li>وکالتنامه عام</li>
                            <li>وکالتنامه خاص</li>
                            <li>وکالتنامه بانکی</li>
                            <li>وکالتنامه قضایی</li>
                            <li>وکالتنامه اداری</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۱۰۰,۰۰۰ تومان</span>
                            <span class="duration">۱-۲ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="service-card">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-file-signature"></i>
                        </div>
                        <h3>اقرارنامه‌ها</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم انواع اقرارنامه‌های رسمی و غیررسمی</p>
                        <ul class="service-list">
                            <li>اقرار بدهی</li>
                            <li>اقرار مالکیت</li>
                            <li>اقرار عدم دعوا</li>
                            <li>اقرار تعهد</li>
                            <li>اقرار واگذاری</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۸۰,۰۰۰ تومان</span>
                            <span class="duration">۱ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="service-card">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <h3>صلح و سازش</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم صلحنامه و سازش برای حل اختلافات</p>
                        <ul class="service-list">
                            <li>صلح مالی</li>
                            <li>صلح خانوادگی</li>
                            <li>صلح تجاری</li>
                            <li>سازش کیفری</li>
                            <li>صلح املاک</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۲۰۰,۰۰۰ تومان</span>
                            <span class="duration">۲-۳ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="service-card">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        <h3>هبه و بخشش</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم هبه‌نامه و انتقال بلاعوض اموال</p>
                        <ul class="service-list">
                            <li>هبه املاک</li>
                            <li>هبه منقول</li>
                            <li>هبه مشروط</li>
                            <li>هبه بین الزوجین</li>
                            <li>هبه خیریه</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۱۵۰,۰۰۰ تومان</span>
                            <span class="duration">۱-۲ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="service-card">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-scroll"></i>
                        </div>
                        <h3>وصیت‌نامه</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم وصیت‌نامه قانونی و معتبر</p>
                        <ul class="service-list">
                            <li>وصیت‌نامه عادی</li>
                            <li>وصیت‌نامه رسمی</li>
                            <li>وصیت به خیریه</li>
                            <li>وصیت مشروط</li>
                            <li>ابطال وصیت</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۱۲۰,۰۰۰ تومان</span>
                            <span class="duration">۱-۲ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="service-card">
                    <div class="service-header">
                        <div class="service-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3>شرکت و تجارت</h3>
                    </div>
                    <div class="service-body">
                        <p>تنظیم اسناد مربوط به شرکت‌ها و فعالیت‌های تجاری</p>
                        <ul class="service-list">
                            <li>اساسنامه شرکت</li>
                            <li>قرارداد شراکت</li>
                            <li>تغییر اساسنامه</li>
                            <li>انحلال شرکت</li>
                            <li>واگذاری سهام</li>
                        </ul>
                        <div class="service-pricing">
                            <span class="price">از ۳۰۰,۰۰۰ تومان</span>
                            <span class="duration">۳-۵ روز کاری</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>چرا دفترخانه ۳۷۸؟</h2>
            <p>مزایای همکاری با ما در تنظیم اسناد حقوقی</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h4>تخصص بالا</h4>
                    <p>کارشناسان مجرب با سال‌ها تجربه در حوزه حقوق</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h4>سرعت بالا</h4>
                    <p>تنظیم سریع اسناد در کمترین زمان ممکن</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4>تضمین قانونی</h4>
                    <p>تمامی اسناد مطابق با آخرین قوانین کشور</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h4>مشاوره رایگان</h4>
                    <p>ارائه مشاوره تخصصی قبل و بعد از تنظیم سند</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="consultation-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2>مشاوره تخصصی حقوقی</h2>
                <p class="mb-4">
                    قبل از تنظیم هر سند، مشاوره کامل و تخصصی دریافت کنید. کارشناسان ما آماده پاسخگویی به سوالات شما هستند.
                </p>
                <div class="consultation-benefits">
                    <div class="benefit-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>بررسی جامع پرونده</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>ارائه بهترین راه‌حل</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>پیگیری تا رسیدن به نتیجه</span>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="/Home/Contact" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-phone me-2"></i>
                        مشاوره رایگان
                    </a>
                    <a href="/UserPanel/Register" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        ثبت درخواست
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="consultation-image">
                    <img src="/images/consultation.jpg" alt="مشاوره حقوقی" class="img-fluid rounded-3" 
                         onerror="this.src='https://via.placeholder.com/500x400/667eea/ffffff?text=مشاوره+حقوقی'">
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .page-hero {
            background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
            color: white;
            padding: 100px 0;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-badges {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .badge-item {
            background: rgba(255,255,255,0.2);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.9rem;
            backdrop-filter: blur(10px);
        }

        .hero-visual {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .legal-icons {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        .icon-item {
            background: rgba(255,255,255,0.1);
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }

        .icon-item i {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            display: block;
        }

        .icon-item span {
            font-weight: 500;
        }

        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .service-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            overflow: hidden;
            height: 100%;
            transition: all 0.3s ease;
            position: relative;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .service-card.featured {
            border: 2px solid var(--secondary-color);
        }

        .service-card.featured::before {
            content: 'محبوب';
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--secondary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 1;
        }

        .service-header {
            padding: 2rem 2rem 1rem;
            text-align: center;
        }

        .service-icon {
            width: 70px;
            height: 70px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

        .service-icon i {
            font-size: 1.8rem;
            color: white;
        }

        .service-header h3 {
            color: var(--primary-color);
            margin-bottom: 0;
        }

        .service-body {
            padding: 0 2rem 2rem;
        }

        .service-list {
            list-style: none;
            padding: 0;
            margin: 1.5rem 0;
        }

        .service-list li {
            padding: 0.5rem 0;
            position: relative;
            padding-right: 1.5rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .service-list li:last-child {
            border-bottom: none;
        }

        .service-list li::before {
            content: '\f00c';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 0;
            color: var(--success-color);
            font-size: 0.8rem;
        }

        .service-pricing {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .service-pricing .price {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.1rem;
        }

        .service-pricing .duration {
            color: #666;
            font-size: 0.9rem;
        }

        .feature-item {
            text-align: center;
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            height: 100%;
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-secondary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

        .feature-icon i {
            font-size: 1.5rem;
            color: white;
        }

        .feature-item h4 {
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .consultation-benefits {
            margin: 2rem 0;
        }

        .benefit-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .consultation-image img {
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        @@media (max-width: 768px) {
            .hero-badges {
                justify-content: center;
            }

            .legal-icons {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .service-pricing {
                flex-direction: column;
                gap: 0.5rem;
                text-align: center;
            }
        }
    </style>
} 