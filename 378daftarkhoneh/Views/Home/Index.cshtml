@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize carousel with auto rotation
            var carousel = new bootstrap.Carousel(document.querySelector('#heroCarousel'), {
                interval: 6000,
                wrap: true,
                pause: 'hover'
            });

            // Add animation effects when slide changes
            $('#heroCarousel').on('slide.bs.carousel', function (e) {
                // Reset all animations
                $(this).find('.animate__animated').removeClass('animate__animated animate__fadeInDown animate__fadeInUp animate__fadeInLeft animate__fadeInRight animate__bounceInDown animate__bounceInUp animate__zoomIn animate__delay-1s animate__delay-2s');
            });

            $('#heroCarousel').on('slid.bs.carousel', function (e) {
                // Add animations to active slide
                var activeSlide = $(this).find('.carousel-item.active');
                
                setTimeout(function() {
                    activeSlide.find('h1, h2').addClass('animate__animated animate__fadeInDown');
                }, 200);
                
                setTimeout(function() {
                    activeSlide.find('p').addClass('animate__animated animate__fadeInUp animate__delay-1s');
                }, 400);
                
                setTimeout(function() {
                    activeSlide.find('.btn, .d-flex').addClass('animate__animated animate__fadeInUp animate__delay-2s');
                }, 600);
            });

            // Counter animation for visitor count
            function animateCounter() {
                let targetCount = 15685;
                let currentCount = 0;
                let increment = targetCount / 100;
                let counter = setInterval(function() {
                    currentCount += increment;
                    if (currentCount >= targetCount) {
                        currentCount = targetCount;
                        clearInterval(counter);
                    }
                    $('.visitor-counter').text(toPersianNumbers(Math.floor(currentCount).toLocaleString()));
                }, 50);
            }

            // تابع تبدیل اعداد انگلیسی به فارسی
            function toPersianNumbers(str) {
                const persianDigits = ['۰', '۱', '۲', '۳', '۴', '۵', '۶', '۷', '۸', '۹'];
                return str.toString().replace(/\d/g, function(digit) {
                    return persianDigits[parseInt(digit)];
                });
            }

            // Trigger counter animation when visitor info is visible
            if ($('.visitor-counter').length) {
                animateCounter();
            }

            // Smooth scrolling for internal links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });

            // Parallax effect for slides
            $(window).scroll(function() {
                var scrolled = $(this).scrollTop();
                var rate = scrolled * -0.5;
                
                $('.slide-bg').css({
                    'transform': 'translate3d(0, ' + rate + 'px, 0)'
                });
            });

            // Add loading animation to buttons
            $('.btn').on('click', function() {
                var btn = $(this);
                if (!btn.hasClass('no-loading')) {
                    btn.addClass('loading');
                    setTimeout(function() {
                        btn.removeClass('loading');
                    }, 2000);
                }
            });

            // Intersection Observer for scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        $(entry.target).addClass('animate-in');
                    }
                });
            }, observerOptions);

            // Observe elements for scroll animations
            $('.quick-card, .service-card, .feature-item, .document-card').each(function() {
                observer.observe(this);
            });
        });

        // Add visitor counter in hero section
        document.addEventListener('DOMContentLoaded', function() {
            // Add visitor count display
            var visitorInfo = document.createElement('div');
            visitorInfo.className = 'visitor-info position-absolute';
            visitorInfo.style.cssText = 'bottom: 100px; right: 30px; background: rgba(255,255,255,0.1); padding: 15px 20px; border-radius: 25px; backdrop-filter: blur(10px); color: white; font-size: 0.9rem;';
            visitorInfo.innerHTML = '<i class="fas fa-eye me-2"></i>تعداد بازدید: <span class="visitor-counter fw-bold">۱۵,۶۸۵</span>';
            
            document.querySelector('.carousel-item.active .slide-bg').appendChild(visitorInfo);
        });
    </script>
}

