@{
    ViewData["Title"] = "خدمات دفترخانه";
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>خدمات دفترخانه اسناد رسمی ۳۷۸</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
                        <li class="breadcrumb-item active">خدمات</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Services Grid -->
<section class="services-grid py-5">
    <div class="container">
        <div class="row g-4">
            <!-- اسناد املاک -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-home"></i>
                        <h3>اسناد املاک</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>تنظیم سند خرید و فروش (مبایعه نامه)</li>
                            <li>تنظیم قرارداد اجاره مسکونی و تجاری</li>
                            <li>تنظیم سند رهن و اجاره</li>
                            <li>تنظیم قولنامه محضری</li>
                            <li>صلح عمری و صلح با حق انتفاع</li>
                            <li>مشارکت در ساخت</li>
                        </ul>
                        <a href="/Home/RealEstateDocuments" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>

            <!-- وکالت -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-gavel"></i>
                        <h3>وکالتنامه</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>وکالت فروش املاک</li>
                            <li>وکالت خرید املاک</li>
                            <li>وکالت بلاعزل</li>
                            <li>وکالت در توکیل</li>
                            <li>وکالت امور بانکی</li>
                            <li>وکالت امور ثبتی</li>
                        </ul>
                        <a href="/Home/LegalDocuments" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>

            <!-- اقرار و تعهد -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-file-signature"></i>
                        <h3>اقرار و تعهد</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>اقرار به دین</li>
                            <li>اقرار به وصول مبلغ</li>
                            <li>تعهد به انجام کار</li>
                            <li>تعهد عدم معامله</li>
                            <li>تعهد تخلیه ملک</li>
                            <li>اقرار به مالکیت</li>
                        </ul>
                        <a href="/Home/LegalDocuments" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>

            <!-- خدمات ازدواج -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-ring"></i>
                        <h3>خدمات ازدواج</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>تنظیم شروط ضمن عقد</li>
                            <li>حق طلاق</li>
                            <li>ابراء مهریه</li>
                            <li>نفقه و حضانت</li>
                            <li>تقسیم اموال</li>
                            <li>صلح مهریه</li>
                        </ul>
                        <a href="/Home/MarriageServices" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>

            <!-- وصیت و وقف -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-scroll"></i>
                        <h3>وصیت و وقف</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>تنظیم وصیتنامه</li>
                            <li>وقفنامه</li>
                            <li>وصیت عهدی</li>
                            <li>وصیت تملیکی</li>
                            <li>وقف عام</li>
                            <li>وقف خاص</li>
                        </ul>
                        <a href="#" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>

            <!-- گواهی و استعلام -->
            <div class="col-lg-4 col-md-6">
                <div class="service-box h-100">
                    <div class="service-header">
                        <i class="fas fa-certificate"></i>
                        <h3>گواهی و استعلام</h3>
                    </div>
                    <div class="service-body">
                        <ul>
                            <li>گواهی امضا</li>
                            <li>استشهادنامه محلی</li>
                            <li>گواهی حیات</li>
                            <li>استعلام ملک</li>
                            <li>گواهی عدم خلاف</li>
                            <li>استعلام بانکی</li>
                        </ul>
                        <a href="#" class="btn btn-primary btn-sm mt-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="process-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">مراحل انجام کار</h2>
        <div class="row">
            <div class="col-md-3 text-center">
                <div class="process-step">
                    <div class="step-number">۱</div>
                    <h5>مشاوره اولیه</h5>
                    <p>بررسی نیاز شما و ارائه راهنمایی</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="process-step">
                    <div class="step-number">۲</div>
                    <h5>تهیه مدارک</h5>
                    <p>راهنمایی و دریافت مدارک مورد نیاز</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="process-step">
                    <div class="step-number">۳</div>
                    <h5>تنظیم سند</h5>
                    <p>تنظیم سند رسمی طبق قوانین</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="process-step">
                    <div class="step-number">۴</div>
                    <h5>ثبت و تحویل</h5>
                    <p>ثبت سند و تحویل به متقاضی</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h3 class="mb-4">برای دریافت مشاوره رایگان با ما تماس بگیرید</h3>
        <div class="d-flex justify-content-center gap-3">
            <a href="tel:02122709138" class="btn btn-primary btn-lg">
                <i class="fas fa-phone me-2"></i>
                ۰۲۱-۲۲۷۰۹۱۳۸
            </a>
            <a href="tel:09121852458" class="btn btn-success btn-lg">
                <i class="fas fa-mobile-alt me-2"></i>
                ۰۹۱۲۱۸۵۲۴۵۸
            </a>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 60px 0;
            margin-bottom: 50px;
        }

        .page-header h1 {
            margin-bottom: 20px;
        }

        .breadcrumb {
            background: transparent;
            padding: 0;
            margin: 0;
        }

        .breadcrumb-item a {
            color: rgba(255,255,255,0.8);
        }

        .breadcrumb-item.active {
            color: white;
        }

        .service-box {
            background: white;
            border-radius: 10px;
            padding: 0;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

        .service-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .service-header {
            background: var(--secondary-color);
            color: white;
            padding: 25px;
            text-align: center;
        }

        .service-header i {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
        }

        .service-header h3 {
            margin: 0;
            font-size: 1.5rem;
        }

        .service-body {
            padding: 25px;
        }

        .service-body ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .service-body ul li {
            padding: 8px 0;
            padding-right: 25px;
            position: relative;
        }

        .service-body ul li::before {
            content: '◈';
            position: absolute;
            right: 0;
            color: var(--secondary-color);
        }

        .process-step {
            margin-bottom: 30px;
        }

        .step-number {
            width: 80px;
            height: 80px;
            background: var(--secondary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: bold;
            margin: 0 auto 20px;
        }

        .cta-section {
            background: #f8f9fa;
        }
    </style>
} 